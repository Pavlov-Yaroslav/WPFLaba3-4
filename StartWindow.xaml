<Window x:Class="WpfApp1.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="StartWindow" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="LightBlue" Padding="10">
            <StackPanel>
                <TextBlock Text="Игра-Бродилка"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="DarkBlue"/>
                <TextBlock x:Name="GameModeText"
                       Text="Режим: все игроки до финиша"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Foreground="DarkBlue"
                       Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <Button x:Name="New_game" Width="140" Height="40"
                Content="Играть"
                FontSize="14"
                FontWeight="SemiBold"
                Background="LightSkyBlue" Click="New_game_Click"
                Margin="15"/>

            <!--<Button x:Name="Continue_game" Width="140" Height="40"
                Content="Продолжить"
                FontSize="14"
                FontWeight="SemiBold"
                Background="LightSkyBlue"
                Margin="20" IsEnabled="False" Click="Continue_game_Click"/>-->

            <Button x:Name="Exit_game" Width="140" Height="40"
                Content="Выход"
                FontSize="14"
                FontWeight="SemiBold"
                Background="LightSkyBlue"
                Click="Exit_Click"/>
        </StackPanel>
    </Grid>

</Window>
